{
	"compilerOptions": {
		"target": "ES2021", // Node.js 14
		"strict": true,
		"noEmitOnError": true,
		"forceConsistentCasingInFileNames": true,
		"skipLibCheck": true,
		"module": "nodenext",
		"moduleResolution": "nodenext",
		"jsx": "react-jsx",
		"esModuleInterop": true,
		"noEmit": true,
		"allowImportingTsExtensions": true
	},
	"include": ["src"]
}
